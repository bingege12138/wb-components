{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./lib",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "wb-components": [
        "packages/index.tsx"
      ]
    },
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["packages/**/*", "node_modules/antd"]
}
